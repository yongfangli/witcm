
@charset "utf-8";
*{
		margin: 0;
		padding: 0;
		font-family:"微软雅黑";
	}
	a{text-decoration: none;color:#FFF}
	.clear{clear:both;}
    
	.bigdiv{ padding:0; margin:0;width:100vw; height:100vh; overflow:hidden;background:url(../images/index.png);background-size:100vw 100vh}
	.list_left{width:20%;float:left; border-right:2px solid #999;background-color:rgba(255, 255, 255, 0.2);color:#FFF}
	.title{
		font-size:2em;
		width:85%;
		margin-left:15%;
		height:9vh;
	}
	.left_p{
		width:100%;
		text-align:center;
		color:#FFF;
		font-size:1.3em;
		height:6vh;
	}
	.left_p span{line-height:6vh}
	.left_p:hover{background:#ec3b3b;}
	.left_p:focus{outline: none;}
	.left_pAct{background:#ec3b3b;}
	.left_content{
		/*width:75vw;*/
		width:95%;
		margin:0 auto;
		border-radius:10px;
		background-color:#fff;
		background-color:rgba(255, 255, 255, 0.6);
		filter:Alpha(opacity = 60);
		position: static;
	}
    .user_cont{
		position: relative;
	}
    .last_page{
		width:100%;
		text-align:center;
		/*margin-top:4vh;*/
		font-size:1.4em;
	}
	.left_user{
		width:79vw;
		float:left;
	}
	.user_cont{
		width:90%;
		margin:0px auto;
	}
	.userDiv{
		width:20%;
		float:left;
		margin-left:2.5%;
		margin-right:2.5%;
		border-radius:10px;
		background-color:#fff;
		background-color:rgba(255, 255, 255, 0.6);
		filter:Alpha(opacity = 60);
		box-shadow:0px 0px  3px 3px #ec3b3b;
		text-align:center;
		position: static;

	}
	.userDiv:focus{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}
	.userDivContent{
		width:100%;
		position: relative;
	}
	.imgWrap{
		width:100%;
		margin:0 auto;
		overflow: hidden;
		margin-bottom:10px;
		background: #E50018;
	}
	.userimg{
		max-width:100%;
		display: block;
	}
	.username{font-size:1.6em;color:#F00;margin-top:0.8vh}
.head_focus:focus{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}
.div_focus:focus{outline: none;}
.div_focus:focus >div{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}
