<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.witcm.consult.dao.ConsultDao">
    
	<sql id="consultColumns">
		a.id AS "id",
		a.user_id AS "user.id",
		a.user_name AS "userName",
		a.user_types AS "userTypes",
		a.titles AS "titles",
		a.delete_flag AS "deleteFlag",
		a.contents AS "contents",
		a.belong_org_id AS "belongOrgId",
		a.belong_area_id AS "belongAreaId",
		a.create_by AS "createBy.id",
		a.create_date AS "createDate",
		a.update_by AS "updateBy.id",
		a.update_date AS "updateDate",
		u2.name AS "user.name"
	</sql>
	
	<sql id="consultJoins">
		LEFT JOIN sys_user u2 ON u2.id = a.user_id
	</sql>
    
	<select id="get" resultType="Consult">
		SELECT 
			<include refid="consultColumns"/>
		FROM sc_consult a
		<include refid="consultJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="Consult">
		SELECT 
			<include refid="consultColumns"/>
		FROM sc_consult a
		<include refid="consultJoins"/>
		<where>
			
			<if test="user != null and user.id != null and user.id != ''">
				AND a.user_id = #{user.id}
			</if>
			<if test="userName != null and userName != ''">
				AND a.user_name = #{userName}
			</if>
			<if test="userTypes != null and userTypes != ''">
				AND a.user_types = #{userTypes}
			</if>
			<if test="titles != null and titles != ''">
				AND a.titles = #{titles}
			</if>
			<if test="contents != null and contents != ''">
				AND a.contents = #{contents}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="Consult">
		SELECT 
			<include refid="consultColumns"/>
		FROM sc_consult a
		<include refid="consultJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO sc_consult(
			id,
			user_id,
			user_name,
			user_types,
			titles,
			delete_flag,
			contents,
			belong_org_id,
			belong_area_id,
			create_by,
			create_date,
			update_by,
			update_date
		) VALUES (
			#{id},
			#{user.id},
			#{userName},
			#{userTypes},
			#{titles},
			#{deleteFlag},
			#{contents},
			#{belongOrgId},
			#{belongAreaId},
			#{createBy.id},
			#{createDate},
			#{updateBy.id},
			#{updateDate}
		)
	</insert>
	
	<update id="update">
		UPDATE sc_consult SET 	
			user_id = #{user.id},
			user_name = #{userName},
			user_types = #{userTypes},
			titles = #{titles},
			contents = #{contents},
			belong_org_id = #{belongOrgId},
			belong_area_id = #{belongAreaId}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM sc_consult
		WHERE id = #{id}
	</update>
	
</mapper>