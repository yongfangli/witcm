<%@ page contentType="text/html;charset=UTF-8"%>
<%@ include file="/WEB-INF/views/modules/cms/front/include/taglib.jsp"%>
<!DOCTYPE html>
<html>
<head>
	<title>首页-注册</title>
	<meta name="decorator" content="cms_business_${site.theme}"/>
	<meta name="description" content="jinggangshan ${site.description}" />
	<meta name="keywords" content="jinggangshan ${site.keywords}" />
	
	<link href="${ctxStaticTheme}/css/register.css" type="text/css" rel="stylesheet" />
	
	<script type="text/javascript">
	   
	</script>
</head>
<body>
    <form id="form1">
    <div id="dvMain">
        <div id="dvContent">
            <div id="dvInner">
                <table>
                    <tr>
                        <td class="title">所在小区：<span>*</span></td>
                        <td>
                            <select>
                                <option>请选择您所住小区名称</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="title">楼栋号：<span>*</span></td>
                        <td><select>
                            <option>请选择您所住楼栋号</option>
                        </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="title">姓名：<span>*</span></td>
                        <td><input type="text"/></td>
                    </tr>
                    <tr>
                        <td class="title">身份证号：<span>*</span></td>
                        <td><input type="text"/></td>
                    </tr>
                    <tr>
                        <td class="title">手机号码：<span>*</span></td>
                        <td><input type="text"/></td>
                    </tr>
                    <tr>
                        <td class="title">家庭号码：<span>*</span></td>
                        <td>
                            <input type="text"/></td>
                    </tr>
                    <tr>
                        <td class="title">登陆密码：<span>*</span></td>
                        <td>
                            <input type="password"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="title">验证密码：<span>*</span></td>
                        <td>
                            <input type="password"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="title">验证码：<span>*</span></td>
                        <td>
                            <input style="width:150px;" type="text" placeholder="请输入右则的验证码"/>
                            &nbsp;&nbsp;<img style="width:110px;height:35px;background: red; vertical-align: middle;"></img>
                            &nbsp;&nbsp;<a href="#" style="color:red;text-decoration: none;">换一张</a>
                           	<span style="float: right;margin-top: 10px;"> 已有帐号？<a href='${ctx}/bus/login${fns:getUrlSuffix()}'>登录</a></span>
                        </td>
                    </tr>
                </table>
            </div>
            <div id="dv_btn">
                <button class="submit" type="submit">注&nbsp;&nbsp;册</button>
                <button class="reset" type="reset">重&nbsp;&nbsp;置</button>
            </div>
        </div>
    </div>
</form>
</body>
</html>