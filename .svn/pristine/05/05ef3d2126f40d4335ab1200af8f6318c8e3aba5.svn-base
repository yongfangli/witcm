<%@ page contentType="text/html;charset=UTF-8" %>
<%@ include file="/WEB-INF/views/include/taglib.jsp"%>
<html>
<head>
	<title>家庭健康档案管理</title>
	<meta name="decorator" content="default"/>
	<script type="text/javascript">
		$(document).ready(function() {
			
		});
		function page(n,s){
			$("#pageNo").val(n);
			$("#pageSize").val(s);
			$("#searchForm").submit();
        	return false;
        }
	</script>
</head>
<body>
	<ul class="nav nav-tabs">
		<li class="active"><a href="${ctx}/healthrecord/healthRecord/">家庭健康档案列表</a></li>
		<shiro:hasPermission name="healthrecord:healthRecord:edit"><li><a href="${ctx}/healthrecord/healthRecord/form">家庭健康档案添加</a></li></shiro:hasPermission>
	</ul>
	<form:form id="searchForm" modelAttribute="healthRecord" action="${ctx}/healthrecord/healthRecord/" method="post" class="breadcrumb form-search">
		<input id="pageNo" name="pageNo" type="hidden" value="${page.pageNo}"/>
		<input id="pageSize" name="pageSize" type="hidden" value="${page.pageSize}"/>
		<ul class="ul-form">
			<li><label>家庭用户ID：</label>
				<form:select path="familyUser.id" class="input-medium">
					<form:option value="" label=""/>
					<form:options items="${fns:getDictList('')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
				</form:select>
			</li>
			<li class="btns"><input id="btnSubmit" class="btn btn-primary" type="submit" value="查询"/></li>
			<li class="clearfix"></li>
		</ul>
	</form:form>
	<sys:message content="${message}"/>
	<table id="contentTable" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>家庭用户ID</th>
				<th>血压(mmHg)</th>
				<th>总胆固醇(mmol/L)</th>
				<th>甘油三酯(mmol/L)</th>
				<th>胆固醇酯(mmol/L)</th>
				<th>空腹血糖(mmol/L)</th>
				<th>餐后1小时血糖(mmol/L)</th>
				<th>餐后2小时血糖(mmol/L)</th>
				<th>医嘱</th>
				<th>测量时间</th>
				<th>修改日期</th>
				<shiro:hasPermission name="healthrecord:healthRecord:edit"><th>操作</th></shiro:hasPermission>
			</tr>
		</thead>
		<tbody>
		<c:forEach items="${page.list}" var="healthRecord">
			<tr>
				<td><a href="${ctx}/healthrecord/healthRecord/form?id=${healthRecord.id}">
					${fns:getDictLabel(healthRecord.familyUser.id, '', '')}
				</a></td>
				<td>
					${healthRecord.bloods}
				</td>
				<td>
					${healthRecord.cholesterol}
				</td>
				<td>
					${healthRecord.triglyceride}
				</td>
				<td>
					${healthRecord.cholest}
				</td>
				<td>
					${healthRecord.fastBloods}
				</td>
				<td>
					${healthRecord.oneBloods}
				</td>
				<td>
					${healthRecord.twoBloods}
				</td>
				<td>
					${healthRecord.doctorAdvice}
				</td>
				<td>
					<fmt:formatDate value="${healthRecord.testDate}" pattern="yyyy-MM-dd HH:mm:ss"/>
				</td>
				<td>
					<fmt:formatDate value="${healthRecord.updateDate}" pattern="yyyy-MM-dd HH:mm:ss"/>
				</td>
				<shiro:hasPermission name="healthrecord:healthRecord:edit"><td>
    				<a href="${ctx}/healthrecord/healthRecord/form?id=${healthRecord.id}">修改</a>
					<a href="${ctx}/healthrecord/healthRecord/delete?id=${healthRecord.id}" onclick="return confirmx('确认要删除该家庭健康档案吗？', this.href)">删除</a>
				</td></shiro:hasPermission>
			</tr>
		</c:forEach>
		</tbody>
	</table>
	<div class="pagination">${page}</div>
</body>
</html>