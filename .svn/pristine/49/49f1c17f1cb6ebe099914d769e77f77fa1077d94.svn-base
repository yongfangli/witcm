@charset "utf-8";
*{
	margin: 0;
	padding: 0;
	font-family:"微软雅黑";
}
a{text-decoration: none;color:#FFF}
.clear{clear:both;}
.clearfix:after{
	content:"";
	display: block;
	height:0;
	visibility: hidden;
	clear:both;
}
   /*2345*/
body{
	min-width:1366px;
}
.bigdiv{ padding:0; margin:0;width:100%; height:100%; overflow:hidden;background:url(../images/index.png);background-size:100% 100%}
.top{width:100%;height:100px;margin:0px auto;padding-left:10px;}
.logo{vertical-align:middle; width:70px}
.top_title{color:#45ab83;font-size:40px; font-weight:bold;margin-left:30px;vertical-align:middle;}
.conLe{line-height:100px;float:left;padding-right:20px;}
.conRi{line-height:100px;float:right;padding-right:20px;}
.loginimg{vertical-align:middle; width:30px}
.border{font-size:30px;margin-left:10px;vertical-align:middle;border-right:1px solid #fff}
.times{font-size:30px;margin-left:10px;vertical-align:middle;color:#fff}
.content{font-size:30px;margin-left:10px;vertical-align:middle;color:#FFF}

/*.middle{width:500px;height:100%;margin:0px auto;}*/
.middle{
	width:500px;
	height:300px;
	position: absolute;
	left:50%;
	top:50%;
	margin-top:-150px;
	margin-left:-250px;
}
.inputDiv{
	width:500px;
	height:40px;
	background:#684E7D;
	border-radius:0.5em;
	overflow: hidden;
	margin-bottom:20px;
}
.input{
	width:400px;
	height:40px;
	line-height: 40px;
	font-size:18px;
	margin-left:2px;
	padding-left:5px;
	border:0px;
	background:#684E7D;
	color:#999;
}
.loginImg{
	width:65px;
	height:40px;
	float:left;
	overflow: hidden;
}
.login{
	width:500px;
	height:40px;
	background:#ec3b3b;
	border:1px;
	font-size:18px;
	color:#FFF;
	border-radius:0.5em;
}
.addfocus{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}
.head_focus:focus{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}