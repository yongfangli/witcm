@charset "utf-8";
 *{
	margin: 0;
	padding: 0;
	font-family:"微软雅黑";
}
a{text-decoration: none;color:#FFF}
.clear{clear:both;}
   
.bigdiv{ padding:0; margin:0;width:100vw; height:100vh; overflow:hidden;background:url(../images/index.png)}
.list_left{
	width:20%;
	/*height:100vh;*/
	float:left;
	border-right:0.2px solid #999;
	color:#FFF;
	background: #fff;
	background-color:rgba(255, 255, 255, 0.2);
	filter:Alpha(opacity = 20);
	position: static;
}
.title{
	font-size:2em;
	width:85%;
	height:9vh;
	margin-left:15%;
	position: relative;
}
.left_p{text-align:center;color:#FFF;font-size:1.3em;position: relative;}

.left_p:hover{background:#ec3b3b;}
.left_p:focus{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}
.left_pAct{background:#ec3b3b;}

.content-wrap{
	width:100%;
	height:90%;
	border-radius:10px;
	overflow:hidden;
	background:#fff;
	background-color:rgba(255, 255, 255, 0.6);
	filter:Alpha(opacity = 60);
	position: static;
}
.right_list{
	width:95%;
	height:7%;
	border-radius:10px;
	border:1px solid #000;
	text-indent:1em;
	font-size:1.5em;
	margin:0px auto;
	margin-top:1.8%;
	position: relative;
}
/*.right_list p{line-height:6vh}*/
.right_list:hover{border:1px solid #ec3b3b;box-shadow:0px 0px  10px 5px #ec3b3b;}
.right_list:focus{border:1px solid #ec3b3b;box-shadow:0px 0px  10px 5px #ec3b3b;outline: none;}
.right_listAct{border:1px solid #ec3b3b;box-shadow:0px 0px  10px 5px #ec3b3b;}
.last_page{
	width:100%;
	text-align:center;
	font-size:1.4em;
}
.head_focus:focus{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}