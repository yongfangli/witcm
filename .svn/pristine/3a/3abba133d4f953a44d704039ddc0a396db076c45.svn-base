<%@ page contentType="text/html;charset=UTF-8" %>
<%@ include file="/WEB-INF/views/include/taglib.jsp"%>
<html>
<head>
	<title>家属管理</title>
	<meta name="decorator" content="default"/>
	<script type="text/javascript">
		$(document).ready(function() {
			
		});
		function page(n,s){
			$("#pageNo").val(n);
			$("#pageSize").val(s);
			$("#searchForm").submit();
        	return false;
        }
	</script>
</head>
<body>
	<ul class="nav nav-tabs">
		<li class="active"><a href="${ctx}/resident/family/">家属列表</a></li>
		<shiro:hasPermission name="resident:family:edit"><li><a href="${ctx}/resident/family/form">家属添加</a></li></shiro:hasPermission>
	</ul>
	<form:form id="searchForm" modelAttribute="family" action="${ctx}/resident/family/" method="post" class="breadcrumb form-search">
		<input id="pageNo" name="pageNo" type="hidden" value="${page.pageNo}"/>
		<input id="pageSize" name="pageSize" type="hidden" value="${page.pageSize}"/>
		<ul class="ul-form">
			<li><label>姓名：</label>
				<form:input path="name" htmlEscape="false" maxlength="64" class="input-medium"/>
			</li>
			<li><label>性别：</label>
				<form:input path="gender" htmlEscape="false" maxlength="64" class="input-medium"/>
			</li>
			<li><label>出生年月：</label>
				<form:input path="birthday" htmlEscape="false" maxlength="64" class="input-medium"/>
			</li>
			<li><label>手机号码：</label>
				<form:input path="telphone" htmlEscape="false" maxlength="64" class="input-medium"/>
			</li>
			<li><label>是否户主：</label>
				<form:radiobuttons path="houserMaster" items="${fns:getDictList('owner')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
			</li>
			<li><label>是否残疾：</label>
				<form:radiobuttons path="deformity" items="${fns:getDictList('disable')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
			</li>
			<li><label>是否扶贫对象：</label>
				<form:radiobuttons path="helpPoor" items="${fns:getDictList('poor')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
			</li>
			<li><label>是否矫正人员：</label>
				<form:radiobuttons path="correct" items="${fns:getDictList('correct')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
			</li>
			<li><label>是否养老对象：</label>
				<form:radiobuttons path="pension" items="${fns:getDictList('aged')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
			</li>
			<li class="btns"><input id="btnSubmit" class="btn btn-primary" type="submit" value="查询"/></li>
			<li class="clearfix"></li>
		</ul>
	</form:form>
	<sys:message content="${message}"/>
	<table id="contentTable" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>姓名</th>
				<th>性别</th>
				<th>出生年月</th>
				<th>身份证号码</th>
				<th>手机号码</th>
				<th>QQ号</th>
				<th>是否户主</th>
				<th>是否残疾</th>
				<th>是否扶贫对象</th>
				<th>是否矫正人员</th>
				<th>是否养老对象</th>
				<th>备注</th>
				<th>归属机构</th>
				<th>归属单位</th>
				<th>修改日期</th>
				<shiro:hasPermission name="resident:family:edit"><th>操作</th></shiro:hasPermission>
			</tr>
		</thead>
		<tbody>
		<c:forEach items="${page.list}" var="family">
			<tr>
				<td><a href="${ctx}/resident/family/form?id=${family.id}">
					${family.name}
				</a></td>
				<td>
					${family.gender}
				</td>
				<td>
					${family.birthday}
				</td>
				<td>
					${family.identityNo}
				</td>
				<td>
					${family.telphone}
				</td>
				<td>
					${family.qqNo}
				</td>
				<td>
					${fns:getDictLabel(family.houserMaster, 'owner', '')}
				</td>
				<td>
					${fns:getDictLabel(family.deformity, 'disable', '')}
				</td>
				<td>
					${fns:getDictLabel(family.helpPoor, 'poor', '')}
				</td>
				<td>
					${fns:getDictLabel(family.correct, 'correct', '')}
				</td>
				<td>
					${fns:getDictLabel(family.pension, 'aged', '')}
				</td>
				<td>
					${family.remarks}
				</td>
				<td>
					${family.belongOrg.id}
				</td>
				<td>
					${family.belongAreaId}
				</td>
				<td>
					<fmt:formatDate value="${family.updateDate}" pattern="yyyy-MM-dd HH:mm:ss"/>
				</td>
				<shiro:hasPermission name="resident:family:edit"><td>
    				<a href="${ctx}/resident/family/form?id=${family.id}">修改</a>
					<a href="${ctx}/resident/family/delete?id=${family.id}" onclick="return confirmx('确认要删除该家属吗？', this.href)">删除</a>
				</td></shiro:hasPermission>
			</tr>
		</c:forEach>
		</tbody>
	</table>
	<div class="pagination">${page}</div>
</body>
</html>