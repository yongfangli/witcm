@charset "utf-8";
*{
	margin: 0;
	padding: 0;
	font-family:"微软雅黑";
}
a{text-decoration: none;color:#FFF}
.clear{clear:both;}
   
.bigdiv{ padding:0; margin:0;width:100vw; height:100vh; overflow:hidden;background:url(../images/index.png);background-size:100vw 100vh}
.top{width:94vw;height:15vh;margin:0px auto}
.logo{vertical-align:middle; width:4vw}
.top_title{color:#45ab83;font-size:2.4em; font-weight:bold;margin-left:0.6vw;vertical-align:middle;}
.conLe{line-height:15vh;float:left}
.conRi{line-height:15vh;float:right}
.loginimg{vertical-align:middle; width:2vw}
.border{font-size:1.7em;margin-left:1vw;vertical-align:middle;border-right:1px solid #fff}
.times{font-size:2.4em;margin-left:1vw;vertical-align:middle;color:#fff}
.content{font-size:1em;margin-left:1vw;vertical-align:middle;color:#FFF}

.middle{width:92vw;height:73vh;margin:0px auto;}
.typeList{width:29vw;height:34vh;text-align:center;float:left;margin-left:1vw;margin-top:2vh;}
.typeList:hover{box-shadow:0px 0px  5px 5px #ec3b3b}
.typeList img{width:6vw;height:12vh;margin-top:7vh}
.typeList p{font-size:1.8em;color:#FFF; line-height:13vh}

.div_focus:focus >div{box-shadow:0px 0px  5px 5px #ec3b3b;outline: none;}