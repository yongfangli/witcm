* {
    margin: 0px;
    padding: 0px;
}

#dvMain {
    width: 100%;
    min-height: 690px;
    background: #e9e9e9;
}

#dvContent {
    width: 1200px;
    margin: 0px auto;
}

/********************左边菜单主容器*********************/
#dvContentLeft {
    float: left;
    width: 150px;
    margin-top:30px;
    min-height: 660px;
    background: #999999;
}

#dvContentLeft ul li {
    list-style: none;
    margin-top: 1px;

}

#dvContentLeft ul li a {
    background: #ec2b2b;
    color: #fff;
}

#dvCheck {
    background: #ec3b3b;
}

#dvContentLeft ul li a div {
    background: #20292b;
    width: 150px;
    height: 50px;
    line-height: 50px;
    text-align: center;
    font-family: 微软雅黑 Regular;
    font-size: 18px;
    color: #cccccc;
}

#dvContentLeft ul li a:link, a:hover {
    text-decoration: none;
    color: #cccccc;
}

#dvContentLeft ul li a #dvCheck {
    background: #ec3b3b;
    color: #fff;
}

/**********************右边主容器**********************/
#dvContentRight {
    float: left;
    width: 988px;
    min-height: 660px;
    margin-top: 30px;
    margin-left: 30px;
    margin-right: 30px;
    border-radius: 4px;
    box-shadow: 0px 0px 15px 1px #c2c2c2;
    background: #fff;
}

#dvContentRight #dvInner {
    width: 100%;
    margin-top: 30px;
}

#dvContentRight #dvInner table {
    width: 880px;
    margin: 0px auto;
}

/*标题列*/
#dvContentRight #dvInner table td.title {
    width: 92px;
    height: 35px;
    padding: 5px;
    font-size: 14px;
    color: #4e4e4e;
    font-family: 宋体;
    font-weight: bold;
    text-align: right;
}

/************文本框 下拉框 多行文本框************/
#dvContentRight #dvInner table select,input,textarea
{
    font-size: 14px;
    color: #696969;
    font-family: 宋体;
    border-radius: 5px;
    box-shadow: 0px 0px 1px 1px #c2c2c2;
	border:1px;
}

#dvContentRight #dvInner table select {
    width: 750px;
    height: 35px;
}

#dvContentRight #dvInner table input {
    width: 748px;
    height: 35px;
}

#dvContentRight #dvInner table textarea {
    resize: none;
    width: 750px;

}

#dvContentRight #dvInner table td.tb_btn {
    text-align: center;
    padding-top: 40px;
}

#dvContentRight #dvInner table button.edit {
    width: 260px;
    height: 40px;
    background: #ec3b3b;
    border-radius: 10px;
    color: #feffff;
    margin-right: 80px;
	border:1px;
}

#dvContentRight #dvInner table button.cancel {
    width: 260px;
    height: 40px;
    background: #20292b;
    border-radius: 10px;
    color: #feffff;
	border:1px;
}
