@charset "utf-8";
*{
		margin: 0;
		padding: 0;
		font-family:"微软雅黑";
	}
	a{text-decoration: none;color:#FFF}
	.clear{clear:both;}
    
	.bigdiv{ padding:0; margin:0;width:100vw; height:100vh; overflow:hidden;background:url(../images/index3.png);background-size:100vw 100vh}
	.list_left{
		width:20%;
		float:left;
		border-right:2px solid #999;
		background: #fff;
		filter:alpha(opacity = 20);
		position: static;
		background-color:rgba(255, 255, 255, 0.2);
		color:#FFF;
	}
	.title{
		font-size:2em;
		width:85%;
		height:9vh;
		margin-left:15%;
		position: relative;
	}
	.left_p{
		text-align:center;
		color:#FFF;
		font-size:1.3em;
		position: relative;
	}
	.left_p span{line-height:6vh}
	.left_p:hover{background:#ec3b3b;}
	.left_p:focus{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}
	.left_pAct{background:#ec3b3b;}
	.left_content{
		width:95%;
		border-radius:10px;
		margin:0 auto;
		color:#FFF;
	}
	.left_user{width:79vw;height:100vh;float:left;}
	
	.seller{
		width:13%;
		border:1px;
		background:#ec3b3b;
		font-size:1.8em;
		color:#FFF;
		border-radius:10px 10px 0px 0px;
		margin-left:2%;
		box-shadow:0px 0px  3px 3px #ec3b3b;
	}
	.goods{
		width:13%;
		height:6vh;
		border:1px;
		background:#3D9972;
		font-size:1.4em;
		color:#FFF;
		border-radius:10px 10px 0px 0px;
		margin-left:2%;
	}
	.font{font-size:1.4em; line-height:1.5em}
	.content{
		width:100%;
		/*height:78vh;*/
		border-top:3px solid #3D9972;
		overflow:auto;
	}
	.touristImg{
		width:100%;
		height:78vh;
		border-top:3px solid #3D9972;
		overflow:hidden;
	}
	.last_page{
		width:100%;
		text-align:center;
		font-size:1.4em;
		color:#000;
	}
	.touristimg1{
		width:47%;
		height:34vh;
		border:0.5em solid #FFF;
		float:left;
	}
	.touristimg2{
		width:47%;
		height:34vh;
		border:0.5em solid #FFF;
		float:right;
	}
	.touristimg3{
		width:47%;
		height:34vh;
		border:0.5em solid #FFF;
		float:left;
		/*margin-top:4vh;*/
	}
	.touristimg4{
		width:100%;
		height:34vh;
		border:0.5em solid #FFF;
		float:right;
		margin-top:4vh;
	}
	.timg{width:35.5vw;height:34vh}
	
.head_focus:focus{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}