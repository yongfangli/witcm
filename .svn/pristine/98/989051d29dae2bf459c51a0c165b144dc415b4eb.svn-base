@charset "utf-8";
*{
		margin: 0;
		padding: 0;
		font-family:"微软雅黑";
	}
	a{text-decoration: none;color:#FFF}
	.clear{clear:both;}
    
	.bigdiv{
		padding:0;
		margin:0;
		width:100%;
		height:100vh;
		overflow:hidden;
		background:url(../images/index.png);
		background-size:100vw 100vh;
	}
	.top{
		width:100%;
		height:11vh;
		background:url(../images/twobackbom.png);
		background-size:100vw 11vh;
	}
	.top_cen{
		width:94%;
		height:100%;
		margin:0px auto;
		color:#FFF;
	}
	.title{
		line-height: 11vh;
		font-size: 2em;
		position: relative;
		text-align: center;
	}
	.title>a{
		width:3%;
		display: block;
		position: absolute;
		top:0;
		left:0;
	}
	.title>a>img{
		width:100%;
	}
	.middle{
		width:94%;
		/*height:75vh;*/
		margin:0px auto;
		background:#FFF;
		filter: alpha(opacity = 60);
		position: relative;
		border-radius:10px;
		margin-top:4vh;
		background-color:rgba(255, 255, 255, 0.6);
	}
	.conten{
		width:95%;
		height:72.5vh;
		margin: 0px auto;
		overflow:hidden;
	}
	.last_page{
		width:100%;
		text-align:center;
		font-size:1.4em;
	}
	.titleArticle{
		width:95%;
		border:1px solid #000;
		border-radius:1em;
		margin:0 auto;
		position: relative;
	}
	.titleArticle p{
		font-size:1.6em;
		width:95%;
		margin:0 auto;
		overflow: hidden;
		white-space: nowrap;
		text-overflow: ellipsis;
	}
	.titleArticle:hover{border:1px solid #ec3b3b;box-shadow:0px 0px  0.2em 0.2em #ec3b3b;}
	.titleArticle:focus{border:1px solid #ec3b3b;box-shadow:0px 0px  0.2em 0.2em #ec3b3b;outline: none;}
.titleArticle  i{
	position: absolute;
	display:block;
	width:80px;
	height:7vh;
	right:5px;
	top:0;
	z-index: 100;
	text-align: center;
	line-height: 7vh;
}


.head_focus:focus{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}
.div_focus:focus{outline: none;}
.div_focus:focus >div{box-shadow:0px 0px  15px 10px #ec3b3b;outline: none;}