 *{
		margin: 0;
		padding: 0;
		font-family:"΢���ź�";
	}
	a{text-decoration: none;color:#FFF}
	.clear{clear:both;}
    
	.bigdiv{
		padding:0;
		margin:0;
		width:100%;
		overflow:hidden;
		background:url(../images/index.png);
		/*background-size:100vw 100vh;*/
	}
	.top{
		width:100%;
		/*height:11vh;*/
		background:url(../images/twobackbom.png);
		/*background-size:100vw 11vh;*/
	}
	.top_cen{
		width:94%;
		height:100%;
		margin:0px auto;
		color:#FFF;
		position: relative;

	}
	.title{
		font-size: 2em;
		text-align: center;
	}
 .top_cen .title a{
	 display: inline-block;
	 width:3%;
	 position: absolute;
	 top:0;
	 left:0;
 }
 .top_cen .title a img{
	 width:100% !important;
 }
	.middle{
		width:94%;
		margin:0px auto;
		background:#FFF;
		border-radius:10px;
		background-color:rgba(255, 255, 255, 0.6);
		filter:Alpha(opacity = 60);
		position: static;
	}
	.conten{
		width:90%;
		margin: 0px auto;
		overflow:auto;
		overflow-x: hidden;
		position: relative;
	}
	.article{font-size: 1.4em;
    line-height: 1.5em;}
	.commentDivs{height:6vh;width:90vw;background:#CCC}
	.commentDivs p{font-size:1.6em;line-height:6vh;margin-left:1vw}
	
	.commentDiv{width:90vw;height:17vh;overflow:hidden;margin-top:2vh;}
	.comImg{width:7.5vw;height:15.5vh; border-radius:5em}
	.contents{float:right;width:81vw;height:15.5vh; overflow:hidden}
	.comhr{border:1px dashed #666;margin-top:0.7vh}
	.comp{font-size:1.4em;margin-top:0.4vh}
	
	