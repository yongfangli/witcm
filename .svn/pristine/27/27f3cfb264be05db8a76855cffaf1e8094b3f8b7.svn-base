@charset "utf-8";

#dvMain {
    width: 100%;
    min-height: 720px;
    background: #e9e9e9;
}

#dvContent {
    width: 1200px;
    margin: 0px auto;
}

/********************左边菜单主容器*********************/
#dvContentLeft {
    float: left;
    width: 150px;
    margin-top:30px;
    min-height: 660px;
    background: #999999;
}
#dvContentLeft ul{
	margin-top: 0;
}
#dvContentLeft ul li {
    list-style: none;
    margin-top: 1px;
    margin-left:-40px; 
}

#dvContentLeft ul li a {
    color:#fff; 
}

#dvCheck {
    background: #ec3b3b;
}

#dvContentLeft ul li div {
    background: #20292b;
    width: 150px;
    height: 50px;
    line-height: 50px;
    text-align: center;
    font-family: 微软雅黑 Regular;
    font-size: 18px;
    color: #fff;
}

#dvContentLeft ul li a:link, a:hover {
    text-decoration: none;
    color: #fff;
}

#dvContentLeft ul li .dvCheck {
    background: #ec3b3b;
    color: #fff;
}

#dvContentLeft ul li div:HOVER {
	background: #ec3b3b;
    color: #fff;
}
#dvContentRight {
    float: left;
    width: 988px;
    min-height: 660px;
    margin-top: 30px;
    margin-left: 30px;
    margin-right: 30px;
    border-radius: 4px;
    box-shadow: 0px 0px 15px 1px #c2c2c2;
    background: #fff;
}