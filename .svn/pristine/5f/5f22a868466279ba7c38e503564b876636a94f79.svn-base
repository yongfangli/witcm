@charset "utf-8";
#nav{width:100%;margin: 30px auto 0 auto;}
.nav_first{overflow: hidden;}
.nav_first div{float: left;}
.nav_first>div a:nth-of-type(1){
	text-decoration: none;
	margin-right:5px;
	width: 280px;
	height: 200px;
	overflow: hidden;
	display: block;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	-webkit-background-size: cover !important;
	background-size:cover !important;
	background-repeat: no-repeat !important;
}

.nav_first>.avator a:nth-of-type(1){
	width:207px;
	height:307px;
	background: #f00;
}
div>.avator + .avator{
	margin-left:35px;
}

.nav_first div a img{
	display: block;
	border: 5px solid white;
	margin-left:5px ;
	/*-webkit-box-shadow: 5px 4px 5px #cccccc;*/
	-webkit-box-shadow: 3px 3px 4px #cccccc;
}
#nav span{
	display: block;
	text-align: center;
	font-size: 14px;
	font-family: "微软雅黑" "Regular";
	color: #333333;
	text-decoration: none;
	padding-top: 6px;
	height:12px;
	overflow: hidden;
	padding-bottom:10px;
	width:207px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;

}
.nav_second{/*! margin-top:65px; */}
#page{text-align: center;margin-top:60px;}
#page a{
	display: inline-block;
	font-size: 12px;
	text-decoration: none;
	color: #000;
}
.a_2{
	border: 1px solid #cccccc;
	border-radius: 2px;
	padding: 0px 10px;
}
#page .a_2:hover{
	color:#fff;
	background-color: #EC3B3B;
}