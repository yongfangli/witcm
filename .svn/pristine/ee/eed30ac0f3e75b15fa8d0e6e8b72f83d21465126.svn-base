@charset "utf-8";
#page {
    width: 100%;
    overflow: hidden;
}

#content {
    width: 1000px;
    margin: 30px auto;
}

/*标题*/
#dvTitle
{
    text-align: center;
}

#dvTitle span
{
    font-size: 28px;
    font-family: 微软雅黑 Regular;
    color:#ec3b3b;
}
/****************************************************************/
#hrUp
{
    margin:10px 0;
    color: #D9D9D9;
}
/****************************************************************/
#dvDate
{
    height:50px;
}

#dvDateLeft
{
    text-align: left;
    float: left;
    width:500px;

}
#dvDateLeft span
{
    font-size: 14px;
    font-family: 微软雅黑 Regular;
    color:#666666;
}

#dvDateRight
{
    float:right;
    width:200px;

}

#dvDateRight img
{
    vertical-align: middle;
}
/****************************************************************/
#dvBook{
	display: inline-block;
}
#dvBook div.word
{
    font-size: 16px;
    font-family: 微软雅黑 Regular;
    color:#777777;
    text-align: left;
}
#dvBook #dvBookImage
{
    text-align: center;
}
/****************************************************************/
#dvMyRemark
{
    margin-top:30px;
    /*! float: right; */
}

#dvMyRemark textarea
{
    width:930px;
    height:50px;
    font-size: 16px;
    font-family: 微软雅黑 Regular;
    color:#666666;
    /*! align-content: left; */
    display: inline-block;
    float: left;
}

#dvMyRemark button
{
    width:57px;
    height:56px;
    background: #eb3b3b;
    color:#ffffff;
    border:0px;
}




/****************************************************************/
.pinglun{
	width: 1000px;
	line-height: 35px;
	background-color: #e9e9e9;
	font-family: 微软雅黑 Regular;
    color:#333;
    font-size: 16px;
    text-indent: 10px;
    margin-top:30px;
}

.content .div_img img{
	width: 60px;
	height: 60px;
	border-radius: 50%;
	margin-top: 15px;
}
.content{overflow: hidden;margin-top:10px;}
.content div{float: left;}
.content_info{margin-left:20px;}
.content_info img{vertical-align: middle;}
.content_info .content_info_td{font-size: 14px;font-family: "微软雅黑" "Regular";color: #ccc;}
.content_info p{font-size: 16px;font-family: "微软雅黑" "Regular";color: #666;margin-bottom: 20px;}
.content hr{color: #D9D9D9;clear: both;margin-top: 10px;}
/****************************************************************/
/*分页*/
#page {
    text-align: center;
    margin-top: 60px;
}

#page a {
    display: inline-block;
    font-size: 12px;
    text-decoration: none;
    color: #000;
}

.a_2 {
    border: 1px solid #cccccc;
    border-radius: 2px;
    padding: 0px 10px;
}

#page .a_2:hover {
    color: #fff;
    background-color: #EC3B3B;
}